{
  "name": "statemine-indexer",
  "private": true,
  "scripts": {
	"build": "rm -rf lib && tsc",
    "init": "node db/init.js",
    "db:migrate": "npx sqd db migrate",
    "schema:reset": "",
    "processor:migrate": "echo skip",
    "processor:start": "node lib/processor.js",
    "processor:docker-run": "bash scripts/docker-run.sh",
    "query-node:start": "squid-graphql-server",
    "lint": "npm run lint:prod -- --fix",
    "lint:prod": "eslint . --ext .ts --ignore-path .gitignore --max-warnings 0"
  },
  "dependencies": {
    "@polkadot/types": "^6.5.1",
    "@subsquid/ss58": "^0.0.2",
    "@subsquid/substrate-processor": "^0.2.3",
    "class-validator": "^0.13.1",
    "dotenv": "^16.0.1",
    "inflected": "^2.1.0",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@subsquid/cli": "^0.0.6",
    "@subsquid/substrate-metadata-explorer": "^0.0.6",
    "@subsquid/substrate-typegen": "^0.0.6",
    "@types/inflected": "^1.1.29",
    "@types/pg": "^8.6.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "typescript": "~4.4.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md}": "prettier --write"
  }
}
